{
  "name": "ff-bot",
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "Dan Whitacre <dan@whitacre.dev>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.2",
    "@hapi/inert": "^7.1.0",
    "@hapi/joi": "^17.1.1",
    "@hapi/vision": "^7.0.2",
    "@hapi/wreck": "^18.0.1",
    "config": "^3.3.9",
    "dotenv": "^16.3.1",
    "hapi-pino": "^12.1.0",
    "hapi-swagger": "^17.0.0",
    "joi": "^17.9.2",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@types/config": "^3.3.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "babel-jest": "^29.5.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.18.4",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "test": "set NODE_ENV=development&& jest test",
    "test:types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "yarn lint --fix",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/ff-bot.js --keep-names=true --minify=false",
    "build:watch": "yarn build --watch",
    "build:docker": "docker-compose build ff-bot",
    "dev": "process-compose -f process-compose.yml",
    "dev:nopc": "concurrently -k -p \"[{name}]\" -n \"Build,API,GroupMeSim\" -c \"cyan.bold,green.bold,red.bold\" \"yarn build:watch\" \"yarn start:watch\" \"yarn start:groupmesim\"",
    "start": "node dist/ff-bot.js",
    "start:watch": "nodemon -i test dist/ff-bot.js -w .env -w dist/ff-bot.js -w config",
    "start:ngrok": "ts-node .bin/ngrok.ts",
    "start:docker": "docker-compose up --build -- ff-bot",
    "start:groupmesim": "docker-compose up -- groupmesim"
  }
}
